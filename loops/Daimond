import java.util.*;
class Main {
    public static void main(String[] args) {
    Scanner sc = new Scanner(System.in);
    int n=sc.nextInt();
    pattern(n);
    }
    public static void pattern(int n)
    {
        
        for(int i=0;i<2*n;i++)
        
        {
            int col=i>n ? 2*n-i:i;
            
            
            int spaces = n-col;
            
            for(int s=0;s<spaces;s++)
            {
                System.out.print(" ");
            }
            
            for(int j=0;j<col;j++)
            {
                System.out.print("* ");
            }
            System.out.println();
        }
    }
}
